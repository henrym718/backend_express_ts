{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@User/*": ["features/user/*"],
            "@Role/*": ["features/role/*"],
            "@Auth/*": ["features/auth/*"],

            "@Bootstrap/*": ["bootstrap/*"],
            "@Config/*": ["config/*"]
        },
        "outDir": "cache/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_module", "cache"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
